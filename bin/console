#!/usr/bin/env ruby

require "bundler/setup"
require "changex"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

@spark_plug = Changex::EnginePart.new(name: "spark plug", price: 10)
@wheel      = Changex::EnginePart.new(name: "wheel", price: 1)
@bolt       = Changex::EnginePart.new(name: "bolt", price: 0.1)

6.times do
  @wheel << @bolt
end

require "irb"
IRB.start
